<Window x:Class="VRChatUserObserver.EmailOTPDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VRChatUserObserver"
        mc:Ignorable="d"
        Title="EmailOTPDialog" Height="140" Width="500" ResizeMode="NoResize">
	<Grid>
		<Label Content="Authentication Code" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="code" Margin="10,36,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
		<Button Content="Enter" Margin="0,0,10,10" Click="OnEnterButton" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="50"/>
	</Grid>
</Window>
